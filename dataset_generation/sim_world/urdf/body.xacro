<joint name="joint1" type="fixed">
    <parent link="world"/>
    <child link="kinect_link"/>
    <origin xyz="${x1+0.035} ${y1} ${z1-0.05}" rpy="-0 0.239685 -3.08638"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.7"/>
</joint>

<link name="kinect_link">

 <collision>
      <origin xyz="${x2} 0 ${z2}" rpy="0 0 0"/>
      <geometry>
	    <box size="0.073000 0.276000 0.072000"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="${x2} 0 ${z2}" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://sim_world/meshes/kinect.dae"/>
      </geometry>
    </visual>
    
    <inertial>
      <mass value="0.1" />
      <origin xyz="${x2} 0 ${z2}" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>


</link>

<joint name="kinect_link_to_camera_joint" type="continuous">
    <parent link="kinect_link"/>
    <child link="link_camera"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>


<link name="link_camera">
</link>

</robot>
